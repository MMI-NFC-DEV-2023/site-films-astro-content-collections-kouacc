---
import "@styles/global.css"

interface Props {
	pageTitle: string;
}

const { pageTitle } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<nav class="p-6 border-b border-black">
			<ul class="flex items-center px-8 py-4 gap-10">
				<li><a class="px-3 py-1.5 rounded-xl" href="/">Accueil</a></li>
				<li><a class="px-3 py-1.5 rounded-xl" href="/personnes">Personnes</a></li>
				<li><a class="px-3 py-1.5 rounded-xl" href="/films">Films</a></li>
			</ul>
		</nav>
		<slot />
	</body>
</html>
